model skills {
  skill_id   Int     @id @default(autoincrement())
  skill      String? @db.VarChar(100)
  percentage Int?
  gg_id      Int?
  users      users?  @relation(fields: [gg_id], references: [gg_id], onDelete: NoAction, onUpdate: NoAction)
}

model users {
  gg_id          Int       @id @default(autoincrement())
  first_name     String?   @db.VarChar(50)
  last_name      String?   @db.VarChar(50)
  email          String    @unique @db.VarChar(100)
  password       String    @db.VarChar(255)
  phone_number   String?   @unique @db.VarChar(15)
  oauth_provider String?   @db.VarChar(50)
  oauth_token    String?   @db.VarChar(255)
  otp            Int?
  avatar_url     String?   @db.VarChar(255)
  created_at     DateTime? @default(now()) @db.Timestamp(6)
  image_url      String?   @db.VarChar(255)
  description    String?
  address        String?   @db.VarChar(200)
  skills         skills[]
}
